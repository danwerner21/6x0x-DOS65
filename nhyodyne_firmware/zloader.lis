   145   0000b5 0000            DMA:            DB      00,00
   146                          FCB:
   147   0000b7 00              DRIVE:          DB     00d
   148   0000b8 444f533635445256                DM     "DOS65DRV"
   149   0000c0 535953                          DM     "SYS"
   150   0000c3 00                              DB     00
